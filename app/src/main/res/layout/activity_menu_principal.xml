<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.shine.proyectofinal.MenuPrincipal"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarsize"
        android:elevation="5dp">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id = "@+id/back">

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Memory"
            android:id="@+id/buttonMemory"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="center"
            android:singleLine="false"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:id="@+id/buttonPerfil"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="center"
            android:singleLine="false" />

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Ranking"
            android:id="@+id/buttonRanking"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="center"
            android:singleLine="false" />

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="MediaPlayer"
            android:id="@+id/buttonMediaPlayer"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="center"
            android:singleLine="false" />

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Calculator"
            android:id="@+id/buttonCalculadora"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="center"
            android:singleLine="false" />

    </LinearLayout>

</LinearLayout>
